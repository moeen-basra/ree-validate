{
  "name": "ree-validate",
  "version": "3.3.2",
  "description": "Simple React.js input validation plugin",
  "author": "Moeen Basra <m.basra@live.com>",
  "license": "MIT",
  "module": "dist/ree-validate.esm.js",
  "unpkg": "dist/ree-validate.js",
  "main": "dist/ree-validate.js",
  "homepage": "https://github.com/moeen-basra/ree-validate",
  "repository": "https://github.com/moeen-basra/ree-validate",
  "scripts": {
    "test": "jest",
    "lint": "eslint src tests --fix",
    "flow": "flow",
    "build:locale": "node scripts/locale.js",
    "build:umd": "node scripts/umd.js",
    "build:esm": "node scripts/esm.js",
    "build": "npm run build:umd && npm run build:esm && npm run build:locale",
    "cover": "jest --coverage"
  },
  "keywords": [
    "ReactJS",
    "React",
    "validation",
    "validator",
    "inputs",
    "form"
  ],
  "files": [
    "dist/*.js",
    "dist/locale/*.js",
    "types/*.d.ts"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/plugin-transform-flow-strip-types": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@commitlint/cli": "^11.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.1",
    "date-fns": "^2.16.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "filesize": "^4.2.1",
    "flow-bin": "^0.94.0",
    "flush-promises": "^1.0.2",
    "gzip-size": "^5.1.1",
    "i18n-react": "^0.6.4",
    "jest": "^24.9.0",
    "lint-staged": "^13.1.0",
    "mkdirp": "^0.5.1",
    "polish-plurals": "^1.1.0",
    "rollup": "^1.32.1",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-replace": "^2.2.0",
    "uglify-js": "^3.11.6"
  },
  "peerDependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "eslintIgnore": [
    "locale",
    "dist",
    "flow"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "validator": "^10.11.0"
  }
}
