{
  "name": "ree-validate",
  "version": "3.3.1",
  "description": "Simple React.js input validation plugin",
  "author": "Moeen Basra <m.basra@live.com>",
  "license": "MIT",
  "module": "dist/ree-validate.esm.js",
  "unpkg": "dist/ree-validate.js",
  "main": "dist/ree-validate.js",
  "types": "dist/types/index.d.ts",
  "homepage": "https://github.com/moeen-basra/ree-validate",
  "repository": "https://github.com/moeen-basra/ree-validate",
  "scripts": {
    "test": "jest",
    "lint": "eslint **/*.{js,jsx,ts,tsx} --fix",
    "build:locale": "node scripts/locale.js",
    "build:main": "node scripts/main.js",
    "ts:defs": "node scripts/definitions.js",
    "build": "npm run build:main && npm run ts:defs && npm run build:locale",
    "cover": "jest --coverage"
  },
  "keywords": [
    "ReactJS",
    "React",
    "validation",
    "validator",
    "inputs",
    "form"
  ],
  "files": [
    "dist/*.js",
    "dist/locale/*.js",
    "types/*.d.ts"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "chalk": "^4.0.0",
    "codesandbox": "^2.1.14",
    "cross-env": "^7.0.2",
    "date-fns": "^2.14.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "fs-extra": "^9.0.1",
    "gzip-size": "^5.1.1",
    "husky": "^4.2.5",
    "i18n-react": "^0.7.0",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "markdown-it-custom-block": "^0.1.1",
    "mkdirp": "^1.0.4",
    "polish-plurals": "^1.1.0",
    "prettier": "^2.0.5",
    "raf-stub": "^3.0.0",
    "rollup": "^2.13.1",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.0",
    "tslib": "^2.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.9.5",
    "uglify-js": "^3.9.4"
  },
  "peerDependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "eslintIgnore": [
    "locale",
    "dist",
    "flow"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "validator": "^10.11.0"
  }
}
